document.getElementById("findCleats").addEventListener("click", function () {
    let position = document.getElementById("position").value;
    let surface = document.getElementById("surface").value;
    let resultDiv = document.getElementById("cleatResult");

    let recommendations = {
        "Forward": {
            "Grass": "Nike Mercurial Superfly 9 Elite FG",
            "Turf": "Adidas X Speedportal.1 Turf",
            "Indoor": "Puma Ultra Match Indoor"
        },
        "Midfield": {
            "Grass": "Adidas Predator Accuracy+ FG",
            "Turf": "Nike Phantom GX Turf",
            "Indoor": "New Balance Audazo V6 Indoor"
        },
        "Defender": {
            "Grass": "Nike Tiempo Legend 10 FG",
            "Turf": "Adidas Copa Pure.1 Turf",
            "Indoor": "Joma Top Flex Indoor"
        },
        "Goalkeeper": {
            "Grass": "Puma Future Ultimate FG",
            "Turf": "Nike Tiempo React Turf",
            "Indoor": "Mizuno Morelia Sala Indoor"
        }
    };

    let cleat = recommendations[position][surface] || "No recommendation found.";

    // Show the result properly
    resultDiv.innerHTML = `<strong>Recommended Cleat:</strong> ${cleat}`;
    resultDiv.style.display = "block";
});
